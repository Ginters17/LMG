<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonPrimary" parent="@style/Widget.Material3.Button">
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundColor">@color/orange</item>
    </style>

    <style name="categoryItem" parent="@style/Widget.Material3.Button">
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundColor">@color/orange</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="advertItem">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="advertButton">
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="backgroundTint">@color/purple</item>
        <item name="android:textSize">20sp</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>